
@{
    ViewBag.Title = "Mentor";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Mentors</h2>
@if (!Model.Any())
{
    <p>We don't have any mentors yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Mentor</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mentor in Model)
            {
                <tr>
                    <td>@Html.ActionLink(mentor.Name, "mentorDetails", "Students", new { id = mentor.Id }, null)</td>
                    <td>@mentor.Email</td>
                </tr>
            }
        </tbody>
    </table>
}




